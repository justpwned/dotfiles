set $mod Mod4
set $alt Mod1

# Set english and russian layout
exec_always --no-startup-id "setxkbmap -layout us,ru -option grp:win_space_toggle"

for_window [class=".*"] border pixel 1
gaps inner 10

for_window [class="vlc"] floating enable
for_window [class="Eog"] floating enable

# Drop down Spotify
for_window [class="Spotify"] floating enable, resize set 1600 900, move scratchpad
bindsym $mod+s exec --no-startup-id run-one spotify; [class="Spotify"] scratchpad show; [class="Spotify"] move position center

exec --no-startup-id telegram-desktop -startintray
exec --no-startup-id discord --start-minimized

for_window [class="TelegramDesktop"] floating enable, resize set 1600 900, move scratchpad
bindsym $mod+n exec --no-startup-id telegram-desktop; [class="TelegramDesktop"] scratchpad show; [class="TelegramDesktop"] move position center

for_window [class="discord"] floating enable, resize set 1600 900, move scratchpad
bindsym $mod+m exec --no-startup-id run-one discord; [class="discord"] scratchpad show; [class="discord"] move position center

for_window [instance="dropdown_terminal"] floating enable, sticky enable, resize set 960 540, move scratchpad
bindsym $mod+Shift+Return exec --no-startup-id run-one kitty --name dropdown_terminal; [instance="dropdown_termina"] scratchpad show;

# border       - border around window title bar
# bground      - title bar background
# text         - title bar label
# indicator    - new window
# child_border - border around the window
#
# class                 border  bground text    indicator child_border
client.focused          #ffffff #aaaaaa #aaaaaa #fc03b1   #fc03b1
client.focused_inactive #aaaaaa #aaaaaa #aaaaaa #aaaaaa   #aaaaaa
client.unfocused        #aaaaaa #aaaaaa #aaaaaa #aaaaaa   #aaaaaa

# The combination of xss-lock, nm-applet and pactl is a popular choice, so
# they are included here as an example. Modify as you see fit.

# xss-lock grabs a logind suspend inhibit lock and will use i3lock to lock the
# screen before suspend. Use loginctl lock-session to lock your screen.
exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock --nofork


# NetworkManager is the most popular way to manage wireless networks on Linux,
# and nm-applet is a desktop environment-independent system tray GUI for it.
exec --no-startup-id nm-applet

# Use pactl to adjust volume in PulseAudio.
set $refresh_i3status killall -SIGUSR1 i3status
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10% && $refresh_i3status
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10% && $refresh_i3status
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status

# Media player controls
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioPause exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# change focus between tiling/floating windows
bindsym $mod+c focus mode_toggle

# start a terminal
bindsym $mod+Return exec i3-sensible-terminal

# kill focused window
bindsym $mod+q kill

bindsym $alt+space exec "rofi -modi drun,run -theme .config/rofi/themes/rounded-blue-dark.rasi -show drun "

bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

bindsym $mod+g split h
bindsym $mod+v split v

bindsym $mod+f fullscreen toggle
bindsym $mod+r layout toggle split
bindsym $mod+t floating toggle

# focus the parent container
bindsym $mod+a focus parent

set $monitor_main DP-0
set $monitor_aux HDMI-1

set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"


workspace $ws1 output $monitor_main
workspace $ws2 output $monitor_main
workspace $ws3 output $monitor_main

workspace $ws4 output $monitor_aux
workspace $ws5 output $monitor_aux
workspace $ws6 output $monitor_aux

bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10

workspace 11 output $monitor_main
workspace 12 output $monitor_aux
bindsym $mod+d exec --no-startup-id i3-show-desktop

bindsym $mod+shift+d workspace $ws1; workspace $ws4

bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10


bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"
bindsym $mod+Shift+y exec --no-startup-id i3resize left
bindsym $mod+Shift+u exec --no-startup-id i3resize down
bindsym $mod+Shift+i exec --no-startup-id i3resize up
bindsym $mod+Shift+o exec --no-startup-id i3resize right

#bar {
#    status_command i3status
#}

bindsym $mod+Tab workspace next_on_output
bindsym $mod+Shift+Tab workspace prev_on_output
bindsym $mod+e exec --no-startup-id nautilus

set $bg-color #333333
bindsym $mod+shift+x exec i3lock --color "$bg-color"
bindsym $mod+b exec google-chrome

exec_always --no-startup-id nitrogen --restore
exec_always --no-startup-id picom
exec_always --no-startup-id $HOME/.config/polybar/launch.sh
