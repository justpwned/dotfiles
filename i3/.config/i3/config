set $mod Mod4
set $alt Mod1

set $monitor_main DP-2
set $monitor_aux HDMI-1

exec "setxkbmap -layout us,ru -option 'grp:win_space_toggle'"
font pango:JetBrainsMono Nerd Font 11

exec --no-startup-id dex --autostart --environment i3

set $lock ~/.config/i3/scripts/lock.sh
exec --no-startup-id xidlehook --detect-sleep --not-when-audio --not-when-fullscreen --timer 300 $lock '' --timer 600 'systemctl suspend' ''
bindsym $mod+Shift+x exec --no-startup-id $lock

exec --no-startup-id nm-applet
exec --no-startup-id picom

set $refresh_i3status killall -SIGUSR1 i3status-rs
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10% && $refresh_i3status
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10% && $refresh_i3status
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status

floating_modifier $mod
tiling_drag modifier titlebar

bindsym $mod+q kill


bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

bindsym $mod+g split h
bindsym $mod+v split v

bindsym $mod+f fullscreen toggle

bindsym $mod+w layout tabbed
bindsym $mod+r layout toggle split

bindsym $mod+s floating toggle
bindsym $mod+Shift+s focus mode_toggle

bindsym $mod+a focus parent
bindsym $mod+Shift+a focus child

set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

workspace $ws1 output $monitor_main
workspace $ws2 output $monitor_aux
workspace $ws3 output $monitor_main
workspace $ws4 output $monitor_aux

bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

set $next_ws ~/.config/i3/scripts/next_empty_ws.sh
set $show_desktop ~/.config/i3/scripts/show_desktop.sh
bindsym $mod+n exec --no-startup-id $next_ws
bindsym $mod+Shift+n exec --no-startup-id $next_ws -m
bindsym $mod+d exec --no-startup-id $show_desktop 
bindsym $mod+Shift+d workspace number $ws1; workspace number $ws2
bindsym $mod+grave workspace back_and_forth

bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart
bindsym $mod+Shift+e exec "i3-msg exit"


set $resize ~/.config/i3/scripts/i3resize.sh
bindsym $mod+Ctrl+h exec --no-startup-id $resize left
bindsym $mod+Ctrl+j exec --no-startup-id $resize down
bindsym $mod+Ctrl+k exec --no-startup-id $resize up
bindsym $mod+Ctrl+l exec --no-startup-id $resize right

bindsym $mod+Ctrl+Left exec --no-startup-id $resize left
bindsym $mod+Ctrl+Down exec --no-startup-id $resize down
bindsym $mod+Ctrl+Up exec --no-startup-id $resize up
bindsym $mod+Ctrl+Right exec --no-startup-id $resize right

bindsym Print exec --no-startup-id flameshot gui --clipboard --path ~/Pictures/Screenshots
bindsym Shift+Print exec --no-startup-id flameshot screen --path ~/Pictures/Screenshots

bar {
        status_command i3status-rs
	tray_output $monitor_main
	position top
}

for_window [class="TelegramDesktop"] floating enable
for_window [class="Pavucontrol"] floating enable
for_window [class="discord"] floating enable

bindsym $mod+Return exec --no-startup-id kitty
bindsym $alt+space exec --no-startup-id "rofi -show drun"
bindsym $mod+b exec --no-startup-id google-chrome-stable
bindsym $mod+e exec --no-startup-id nautilus
bindsym $mod+t exec --no-startup-id flatpak run org.telegram.desktop
